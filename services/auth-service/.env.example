APP_NAME="Auth Service"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8001

# Service Configuration
SERVICE_NAME=auth-service
SERVICE_PORT=8001

# Database Connection (Shared with other services)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=8889
DB_DATABASE=hooknhunt
DB_USERNAME=root
DB_PASSWORD=root

# Laravel Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:8000,localhost:5173,localhost:3000
SANCTUM_TOKEN_EXPIRATION=525600

# Broadcast & Cache
BROADCAST_CONNECTION=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# SMS Gateway (for OTP)
SMS_API_KEY=
SMS_API_URL=

# CORS (Allow frontend)
FRONTEND_URL=http://localhost:5173
STOREFRONT_URL=http://localhost:3000
